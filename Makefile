################################################################################
########						Comilation Tools						########
################################################################################

NAME = minishell
NAME_TEST = minishell_test

CC = c++
CPPFLAGS =  -Wall -Wextra -Werror

ARGUMENT_RUN = 
ARGUMENT_RUN_TEST =

################################################################################
########							Sources 							########
################################################################################

SRCS_PATH 	=	srcs/

INCS =	

SRCS =	

################################################################################
########							Libraries							########
################################################################################

LIBS = libft/libft.a -lreadline

################################################################################
########						Objects/Dependences						########
################################################################################

OBJS_PATH =	objs/

OBJS =	$(addprefix $(OBJS_PATH), $(SRCS:.cpp=.o))
DEPS =	$(addprefix $(OBJS_PATH), $(SRCS:.cpp=.d))

################################################################################
########							Others								########
################################################################################

RM = rm -rf

################################################################################
########							Colors								########
################################################################################

BLUE		=	\033[0;34m
RED			=	\033[0;31m
GREEN		=	\033[0;32m
NO_COLOR	=	\033[m

################################################################################
########							Rules								########
################################################################################

all: header $(NAME)
bonus: header all

header:
		echo "${BLUE}"
		echo "| |  | |             | | |     "
		echo "| |  | | ___  _ __ __| | | ___ "
		echo "| |/\| |/ _ \| '__/ _` | |/ _ \"
		echo "\  /\  / (_) | | | (_| | |  __/"
		echo " \/  \/ \___/|_|  \__,_|_|\___|"
		echo "              by bsavinel and omoudni"
		echo "${NO_COLOR}"



$(NAME) : header $(OBJS) $(LIBS)
	$(CC) $(CPPFLAGS) $(OBJS) $(LIBS) -o $(NAME) $(INCS)
	echo "$(BLUE)$(NAME): $(GREEN)Success $(NO_COLOR)"

$(OBJS_PATH)%.o: $(SRCS_PATH)%.cpp
	mkdir -p $(dir $@)
	$(CC) $(CPPFLAGS) -MMD -c $< -o $@ $(INCS)

clean :
	$(RM) $(OBJS_PATH)
	$(MAKE) -C libft clean

fclean : clean
	$(RM) $(NAME) 
	$(RM) $(NAME_TEST)
	$(RM) libft/libft.a

re : fclean 
	 make all

################################################################################
#######							Rules for libs							########
################################################################################

libft/libft.a :
	$(MAKE) -C libft all && echo "$(BLUE)Compiation of libft: $(GREEN)Success $(NO_COLOR)" || echo "$(BLUE)Compiation of libft: $(RED)Fail $(NO_COLOR)"

-include $(DEPS)

.PHONY: all clean fclean re bonus

.SILENT: